<UserControl x:Class="CalibrationInstructionsManager.Core.Dialogs.Views.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             dialogs:ViewModelLocator.AutoWireViewModel="True"
             xmlns:dialogs="http://prismlibrary.com/">

    <dialogs:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Height" Value="140"></Setter>
            <Setter Property="Width" Value="180"></Setter>
            <Setter Property="ResizeMode" Value="NoResize"></Setter>
            <Setter Property="dialogs:Dialog.WindowStartupLocation" Value="CenterScreen"></Setter>
        </Style>
    </dialogs:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Message}" Margin="10"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
        <Button Grid.Row="1" Command="{Binding CloseDialogCommand}" Content="Ok" HorizontalAlignment="Stretch" Margin="10"></Button>

    </Grid>
</UserControl>
