<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="clr-namespace:CalibrationInstructionsManager.Core.Behaviors">

    <!-- Button Style -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ButtonStyle.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <!-- Responsive StackPanel -->
    <Style TargetType="StackPanel">
        <Setter Property="behaviors:ResponsivenessBehavior.IsResponsive" Value="True"></Setter>
        <Setter Property="behaviors:ResponsivenessBehavior.HorizontalBreakpointSetters">
            <Setter.Value>
                <SetterBaseCollection>
                    <Setter Property="StackPanel.Orientation" Value="Horizontal"></Setter>
                    <Setter Property="StackPanel.HorizontalAlignment" Value="Center"></Setter>
                </SetterBaseCollection>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>