                <DataGridTextColumn Header="Index" Binding="{Binding ParameterIndex, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                <DataGridTextColumn Header="Default Value" Binding="{Binding DefaultValue, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                <DataGridTextColumn Header="Uncertainty" Binding="{Binding UncertaintyValue, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
